<?xml version="1.0" ?>
<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>

<!-- This extension implements the Y8950 chip on the alternative I/O ports -->
<!-- Note: it doesn't come with the MIDI part of the Music Module, which is
     used by some software to detect the Music Module. That software is not
     interested in MSX-Audio 2, by the way... -->
<msxconfig>
  <info>
    <name>MSX-AUDIO 2</name>
    <manufacturer/>
    <code/>
    <release_year>1986</release_year>
    <description>Generic Yamaha Y8950 MSX-AUDIO, on alternative I/O ports.</description>
    <type>sound expansion</type>
  </info>
  <devices>
    <MSX-AUDIO id="Generic MSX-Audio 2">
      <io base="0xC2" num="2"/>
      <type>Philips</type>
      <sound>
        <volume>12000</volume>
      </sound>
      <sampleram>256</sampleram>
    </MSX-AUDIO>
  </devices>
</msxconfig>
